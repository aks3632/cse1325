import java.util.Scanner;


public class TestScoop {

  public static void main(String[] args) { // function main begins program execution

    // Fields
    //public ArrayList<IceCreamFlavor> flavors;
    //public ArrayList<MixInFlavor> mixins;
    //public ArrayList<Scoop> scoops;

    Scanner scanner = new Scanner(System.in);

    class InObj {
      public char value;
    }

    menu_prompt = new InObj();

    char choice = 'G';
    char menu_prompt =
        "1. Load CSV File\n" // Adding Customers (Promt user)
        "2. Process Next\n" // Process Customer - (Add Entry)
        "3. Quit\n";

    do {
      System.out.printf("Enter a choice: \n"); // Promt user
      System.out.printf("%s", menu_prompt);
      System.out.printf("> ");
      choice = scanner.next().charAt(0); // Get char input
      while( (scanner.next().charAt(0))  != '\n' ); // Similar to getchar()

      System.out.printf("\n");
      switch (choice) {
        case '1': // Dispaly: Dataset list
            System.out.printf("Option 1: Data list\n");
            System.out.printf("\n");
            break;
        case '2': // Display: Calcualted Averages
            System.out.printf("Option 2: Averages\n");
            System.out.printf("\n");
            break;
        case '3': // Gracefully terminate program
            System.out.printf("Good Bye!\n");
            System.out.printf("\n");
            break;
        default:
            System.out.printf("%s\n%s\n", "Invalid input!",
            "Please enter a number range (1 - 3).\n"); // Key selection is NOT an integer.
            break;
      } // end switch
      /* code */
    } while(choice != '3'); // end do..while


  }

} // end TestScoop
